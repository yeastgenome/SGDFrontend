<div metal:use-macro="layout">
  <div metal:fill-slot="content">


<body>

<!-- Subhead
================================================== -->
<header class="jumbotron subhead" id="overview">
	<div class="container">
		<br></br>
		<h1><span tal:content="'GO Term: ' + biocon['display_name']"></h1>
		<p class="lead">
			<span tal:content="biocon['description']">
		</p>
	</div>
</header>


<div class="container-fluid">

<!-- Docs nav
================================================== -->
<div class="row-fluid">
	<div class="span3 bs-docs-sidebar">
		<ul class="nav nav-list bs-docs-sidenav affix-top" id='navbar' name='navbar'>
			<li><h4><span tal:content="'GO Term: ' + biocon['display_name']"></h4></li>
			<li><a href="#summary"><i class="icon-chevron-right"></i> Summary</a></li>
			<li><a href="#ontology"><i class="icon-chevron-right"></i> Ontology</a></li>
			<li><a href="#genes"><i class="icon-chevron-right"></i> Genes</a></li>
		</ul>
	</div>
	
	<div class="span9">  

<!-- Summary
================================================== -->
<section id="summary">
	<div class="page-header">
		<h1>Summary</h1>
		<div>
			<ul class='unstyled'>
				<li><strong>GO ID: </strong><span tal:content="biocon['go_go_id']"></li>
				<li><strong>Namespace: </strong><span tal:content="biocon['go_aspect']"></li>
				<li tal:condition="python: biocon['aliases'] != ''"><strong>Aliases: </strong><span tal:content="biocon['aliases']"></li>
			</ul>
			
		</div>
	</div>
</section>

<!-- Ontology
================================================== -->
<section id="ontology">
	<div class="page-header">
		<h1>Ontology</h1>
			<label class="checkbox">
      			<input id="ancestor_check" type="checkbox" checked="true" name="categories"> Show Ancestors
    		</label>
    		<label class="checkbox">
      			<input id="child_check" type="checkbox" checked="true" name="categories"> Show Children
    		</label>
    		<!--
    		<label class="checkbox">
      			<input id="no_genes" type="checkbox" checked="true" name="categories"> Show Terms With No Genes
    		</label>
    		
    		<label class="radio">
      			<input id="tree_layout" type="radio" name="layout"> Tree Layout
    		</label>
    		<label class="radio">
      			<input id="fd_layout" type="radio" name="layout"> Force Directed Layout
    		</label>
    		-->
    		
		<div id="cytoscapeweb">
            Cytoscape visualization is loading...
        </div>
        <span>Export:</span>
        <div class="btn-group">
        	<a class="btn" onclick="vis.exportNetwork('png', '/download_graph/png')">png</a>
        	<a class="btn" onclick="vis.exportNetwork('svg', '/download_graph/svg')">svg</a>
        	<a class="btn" onclick="vis.exportNetwork('pdf', '/download_graph/pdf')">pdf</a>
        	<a class="btn" onclick="vis.exportNetwork('xgmml', '/download_graph/xml')">xgmml</a>
        	<a class="btn" onclick="vis.exportNetwork('graphml', '/download_graph/txt')">graphml</a>
        	<a class="btn" onclick="vis.exportNetwork('sif', '/download_graph/txt', options={nodeAttr:'label', interactionAttr:'label'})">txt</a>

        </div>
    </div>
</section>

<!-- Genes
================================================== -->
<section id="genes">
	<div class="page-header">
		<h1>Genes with GO Term <span id='genes_header'></span></h1> 
		<a tal:attributes="href go_evidence_link"><button class="btn btn-large btn-warning">All Gene Ontology Evidence <i class="icon-chevron-right icon-white"></i></button></a>
		<br></br>
		<span id='genes_message'></span>
		<div id='genes_wrapper'>
			<table class='table table-striped table-bordered table-condensed tablesorter' id='genes_table' width="100%">
			<thead>
  			<tr>
    			<th>Bioconcept</th>
    			<th>Gene</th>
    			<th>Gene Description</th>
    			<th>Evidence Codes</th>
  			</tr>
  			</thead>
			</table>
        </div>
	</div>
</section>


<script type="text/javascript">
	var vis = null;
	window.onload=function() {
		vis = setup_ontology_cytoscape_vis("${go_ontology_graph_link}");   
	};           
</script>
        
<style>
	/* The Cytoscape Web container must have its dimensions set. */
	html, body { height: 80%; width: 100%; padding: 0; margin: 0; }
	#cytoscapeweb { width: 100%; height: 100%; }
</style>

<script>
	function set_up_go_table() {
		var options = {};
		options["bPaginate"] = true;
		options["sPaginationType"] = "bootstrap";
        options["oTableTools"] = table_tool_option('${go_filename}', false);
		options["sDom"] = '<"clear">lfrtipT';
		options["aaSorting"] = [[1, "asc"]];
        options["fnInitComplete"] = set_up_message_and_count("genes_header", "genes_message", "genes_wrapper");
		options["aoColumns"] = [{"bSearchable":false, "bVisible":false}, null, null, null]
		options["bProcessing"] = true;
		options["sAjaxSource"] = '${go_overview_table_link}';
  		$('#genes_table').dataTable(options);	

	}
	
	$(document).ready(function() {
		set_up_go_table();
	});
</script>



</div>

</body>
</div>
</div>

