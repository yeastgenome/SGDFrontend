<div class="news-container">
    <div class="row">
        <div class="columns medium-4">
            <h1>Meetings</h1>
            {% for meeting in meetings %}
                <div class="homepage-blog-entry">
                    {% if meeting.url %}
                        <span class="homepage-blog-title"><a href="{{meeting.url}}" target="_new">{{ meeting.summary }}</a></span>
                    {% else %}
                        <span class="homepage-blog-title">{{ meeting.summary }}</span>
                    {% endif %}
                    <br />
                    <span>{{ meeting.date_description }} - {{ meeting.location }}</span>
                    <p>{{ meeting.description }}</p>
                </div>
            {% endfor %}
        </div>
        <div class="columns medium-4">
            <h1>New & Noteworthy</h1>
            {% for post in blog_posts %}
                <div class="homepage-blog-entry">
                    <span class="homepage-blog-title"><a href="/blog/{{post.slug}}" target="_new">{{ post.title }}</a> - <span>{{ post.simple_date }}</span>
                    <p>{{ post.excerpt|safe }} <a href="/blog/{{ post.slug }}" target="_new">Read More</a></p>
                </div>
            {% endfor %}
            <p><a href="/blog">More Articles</a></p>
        </div>
        <div class="columns medium-4 white-background" style="margin-top: -10px;">
           <div style="display: flex; align-items: center; justify-content: flex-start; padding-top: 0;"> <!-- Reduced top padding -->
             <h1 style="margin-right: 5px;">Community Forum</h1>
             <a href="https://community.alliancegenome.org/c/model-organism-yeast/8" target="_new">
                <div style="width: 40px; height: 40px; overflow: hidden; margin-left: 10px;">
                   <img src="https://raw.githubusercontent.com/alliance-genome/agr_ui/stage/libs/shared-assets/src/lib/assets/alliance_logo.png" alt="alliance logo" style="width: auto; height: 100%; object-fit: cover; object-position: left;">
                </div>
             </a>
           </div>
           {% for post in discourse_posts %}
                <div class="community-forum-entry">
		   <span class="homepage-blog-title"><a href="{{post.link_url}}" target="_new">{{ post.title }}</a><br><div class="community-forum-category">{{ post.category }}</div></span>
                </div>
            {% endfor %}
	    <div class="community-forum-entry">
               <span class="homepage-blog-title"><a href="https://community.alliancegenome.org/c/model-organism-yeast/8" target="_new">More...</a></span>
            </div>
        </div>
    </div>
</div>

{% endblock body %}

{% block scripts %}
<style>
  .white-background {
    background-color: white;
    padding: 15px; /* Optional: for some spacing inside the box */
    border-radius: 5px; /* Optional: if you want rounded corners */
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Optional: for a slight shadow to lift the box off the page */
  }
  
  .community-forum-entry {
    border-bottom: 1px solid lightgrey; /* Light grey line to separate posts */
    padding-bottom: 10px; /* Space below the post title and category */
    margin-bottom: 10px; /* Space below the grey line */
  }

  .community-forum-title {
    color: blue; /* Grey color for title and category text */
    display: block; /* Ensure that the title takes up the full width */
    margin-bottom: 5px; /* Space between the title and category */
  }

  .community-forum-category {
    color: #505050;  /* a grey that is darker than 'darkgray' but lighter than black */
    font-size: smaller; /* Smaller font size for the category */
    display: block; /* Ensure that the category takes up the full width */
  }

  /* Optional: Add this if you want the last item not to have a border */
  .community-forum-entry:last-child {
    border-bottom: none;
  }
  
</style>
<script>
    // wait a little bit to show the slideshow
    setTimeout(function () {
        $('#slide-show').css({ visibility: 'visible' });
    }, 300);
</script>
{% endblock scripts %}
