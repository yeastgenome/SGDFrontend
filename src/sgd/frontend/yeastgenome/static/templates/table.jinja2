<p id="{{ table_id }}_help" class="medium content f-dropdown" data-dropdown-content>
    {% block help %}{% endblock %}
</p>

<table class='table table-striped table-bordered table-condensed' id='{{ table_id }}'>
    <thead>
    <tr>
        {% block columns %}{% endblock %}
    </tr>
    </thead>
</table>

<div id="{{ table_id }}_buttons" class="button-bar">
    <ul class="button-group radius">
        <li><a id="{{ table_id }}_download" class="small button secondary" disabled="true"><i class='fa fa-download'></i> Download (.txt)</a>
        </li>
    </ul>

    <ul class="button-group radius">
        <li><a id="{{ table_id }}_analyze" class="small button secondary" disabled="true"><i class='fa fa-briefcase'></i> Analyze</a>
        </li>
    </ul>

    {% block additional_buttons %}{% endblock %}
</div>