{% extends "global_layout.jinja2" %}

{% block title %}{{ dataset.display_name }}{% endblock %}

{% block head %}
<script>
	var download_table_link = "{{download_table_link}}";
	var analyze_link = "{{analyze_table_link}}";

	var download_filename = "{{ dataset.format_name|replace(".", "_") }}_annotations";
    var analyze_filename = "<a href='{{ dataset.link }}' class='gene_name'>{{ dataset.display_name }}</a> Genes";

    var display_name = "{{ dataset.display_name }}";
</script>
{% endblock %}


{% block body %}

<div id="center_title" class="row">
	<h2>Dataset: <span class="gene_name">{{ dataset.display_name }}</span></h2>
</div>

<!-- Navbar
================================================== -->
<div class="row">
	
<!-- Includes navbar.html into template -->
    {% include "navbar.jinja2" %}

    <div class="small-12 large-9 columns content-column">

        <script>
            add_navbar_title('Dataset: <span class="gene_name">{{ dataset.display_name }}</span>');
            add_navbar_element('Summary', 'summary');
            {%  if dataset.reference.abstract != none %}
                add_navbar_element('Abstract', 'abstract');
            {%  endif %}
            add_navbar_element('Resources', 'resources');
        </script>

        <!-- Summary
        ================================================== -->
        <section id="summary" data-magellan-destination="summary">
            <div class="page-header">
                <h1>Summary</h1>
                <ul class="unstyled">
                    <li><strong>GEO ID: </strong>{{ dataset.geo_id }}</li>
                    <li><strong>Reference: </strong><a href="{{ dataset.reference.link }}">{{ dataset.reference.display_name }}</a></li>
                    <li><strong>Channels: </strong>{{ dataset.channel_count }}</li>
                    <li><strong># of Conditions: </strong>{{ dataset.condition_count }}</li>
                    <li><strong>Description: </strong>{{ dataset.short_description|safe }}</li>
                    <li><strong>Categories: </strong>{{ dataset.tags|replace('|', ', ') }}</li>
                </ul>
            </div>
        </section>

        {%  if dataset.reference.abstract != none %}
            <section id="abstract" data-magellan-destination="abstract">
                <div class="page-header">
                    <h1>Abstract</h1>
                    <p>{{ dataset.reference.abstract.text|safe}}</p>
                </div>
            </section>
        {%  endif %}

        <!-- Resources
================================================== -->
        <section id="resources" data-magellan-destination="resources">
            <div class="page-header">
                <h1>Resources</h1>
                <ul id='resource_list' class="unstyled">
                    {% for url in dataset.urls %}
                        <a href="{{ url.link }}" target="_blank">{{ url.display_name }}</a>{% if not loop.last %} | {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </section>
    </div>
</div>


{% block scripts %}
<script src="/static/js/local.js"></script>
<script src="/static/js/evidence.js"></script>
<script src="/static/js/ecnumber.js"></script>
{% endblock scripts %}

{% endblock body %}
